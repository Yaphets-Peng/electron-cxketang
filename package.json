{
  "name": "electron-cxketang",
  "version": "1.0.0",
  "description": "cxketang",
  "main": "app/main.js",
  "scripts": {
    "start": "CHCP 65001 & electron .",
    "dev": "CHCP 65001 & electron . --debug",
    "dist": "npm-run-all build:*",
    "build:win": "electron-builder --win --ia32",
    "build:mac": "electron-builder --mac --x64",
    "build:linux": "electron-builder --linux --x64"
  },
  "license": "",
  "repository": "https://gitee.com/mdaimon/electron-cxketang.git",
  "devDependencies": {
    "electron": "^5.0.8",
    "electron-builder": "^22.8.1",
    "electron-notifications": "^1.0.0",
    "yarn-run-all": "^3.1.1"
  },
  "dependencies": {
    "agora-electron-sdk": "2.9.0-rc.106-build.804",
    "axios": "^0.20.0",
    "electron-store": "^6.0.1",
    "log4js": "^6.3.0",
    "qs": "^6.9.4"
  },
  "build": {
    "appId": "com.cxyd.cxketang",
    "copyright": "ChaogXing",
    "productName": "cxketang",
    "compression": "store",
    "directories": {
      "output": "build"
    },
    "files": [
      "**/*",
      "!**/.vscode",
      "!**/.history",
      "!**/log"
    ],
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "app/icons/icon.ico",
      "uninstallerIcon": "app/icons/icon.ico",
      "installerHeaderIcon": "app/icons/icon.ico",
      "createDesktopShortcut": true
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "app/icons/icon.icns"
    },
    "win": {
      "icon": "app/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "app/icons"
    },
    "asar": false,
    "extraFiles": []
  }
}
