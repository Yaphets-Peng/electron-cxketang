{
  "name": "cxketang",
  "version": "2.0.9",
  "description": "cxketang",
  "main": "app/main.js",
  "scripts": {
    "upfig": "node script/before_all.js",
    "start": "CHCP 65001 & electron .",
    "dist": "npm-run-all build:*",
    "build:rebuild": "electron-rebuild -a ia32",
    "build:win": "node script/before_all.js && electron-builder --win --ia32",
    "build:mac": "node script/before_all.js && electron-builder --mac --x64",
    "build-dev:mac": "export NODE_ENV=dev && node script/before_all.js && electron-builder --mac --x64"
  },
  "license": "",
  "devDependencies": {
    "dotenv": "^8.2.0",
    "electron": "^5.0.8",
    "electron-builder": "^22.9.1",
    "electron-notarize": "^1.0.0",
    "electron-notifications": "^1.0.0",
    "yarn-run-all": "^3.1.1"
  },
  "dependencies": {
    "agora-electron-sdk": "3.2.1-rc.71-build.1123",
    "agora-rtm-sdk": "^1.4.1-201",
    "axios": "^0.21.0",
    "electron-log": "^4.3.0",
    "is-running": "^2.1.0",
    "md5": "^2.3.0",
    "qs": "^6.9.4",
    "uuid": "^8.3.1"
  },
  "build": {
    "afterSign": "script/notarize.js",
    "afterAllArtifactBuild": "script/after_build.js",
    "appId": "com.ssreader.cxketangwindows",
    "copyright": "ChaogXing",
    "productName": "超星课堂",
    "artifactName": "ketang_${version}.${ext}",
    "compression": "store",
    "directories": {
      "output": "build/3/${os}"
    },
    "files": [
      "app/",
      "node_modules/",
      "package.json"
    ],
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "win": {
      "icon": "app/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ],
      "verifyUpdateCodeSignature": false,
      "signingHashAlgorithms": [
        "sha256"
      ],
      "signDlls": true,
      "rfc3161TimeStampServer": "http://timestamp.digicert.com",
      "certificateFile": "script/selfsigncert.pfx",
      "certificatePassword": "123456"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "app/icons/icon.ico",
      "installerHeaderIcon": "app/icons/icon.ico",
      "createDesktopShortcut": true,
      "include": "script/urlProtoco.nsh"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "format": "UDBZ",
      "sign": false
    },
    "pkg": {
      "identity": "wenhao li",
      "installLocation": "/Applications",
      "allowAnywhere": true,
      "allowCurrentUserHome": true,
      "allowRootDirectory": true,
      "isVersionChecked": true,
      "isRelocatable": false,
      "overwriteAction": "upgrade"
    },
    "mac": {
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "identity": "wenhao li",
      "entitlements": "script/entitlements.plist",
      "entitlementsInherit": "script/entitlements.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "请允许本程序访问您的麦克风",
        "NSCameraUsageDescription": "请允许本程序访问您的摄像头"
      },
      "icon": "app/icons/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "asar": false,
    "extraFiles": []
  }
}